<div class="contents_wrapper">
  <div class="float">
    <div class='page_title'>
      <h3>投稿一覧ページ</h3>
    </div>
    <div>
      <% @pictures.each do |p| %>
        <div class='contents_container'>
          <div class="container_remove_post_image">
            <div class="container_image">
              <p>profile_image</p>
            </div>
            <div class="container_remove_image">
              <div class="container_name">
                <p> 名前 : <%= p.user.name %></p>
              </div>
              <div class="container_comment">
                <p> コメント : <%= p.content %></p>
              </div>
            </div>
          </div>
          <div class="container_post_image"> 
            <div>
              <% if p.image.url %> 
                <p class="picture_tag">picture</p>
                <%= image_tag p.image.url, class: "picture" if p.image? %>
              <% end %>
            </div>
            <div class="links_container">
              <p>detail_and_created_at</p>
            </div>
          </div>
        </div>
      <% end %> 
    </div>
  </div>
</div>